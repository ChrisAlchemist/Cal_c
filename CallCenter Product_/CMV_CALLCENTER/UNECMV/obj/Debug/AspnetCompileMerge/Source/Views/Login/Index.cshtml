@using UNECMV;
@model UNECMV.Models.CLAVES

@{
    Layout = null;
}

<head>
    @*<title>UNE - CMV</title>*@
    <title>CMV</title>
    <link href="~/Estilos/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Estilos/css/login.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/Estilos/Imagenes/favicon.ico" />
</head>
<body>
    <div class="container">
        <img id="cmv-logo" src="~/Estilos/Imagenes/logo_blanco.png" />
        <div class="login-form">
            <!--<img id="profile-img" class="profile-img-card" src="~/Estilos/Imagenes/avatar_2x.png" />-->
            <img id="profile-img" class="profile-img-card" src="~/Estilos/Imagenes/avatar.png" />
            <p id="profile-name" class="profile-name-card"></p>
            @using (Html.BeginForm("ValidaLogin", "Login", new { @class = "form-signin" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.TextBoxFor(Model => Model.Numusuario, new { @class = "form-control", @placeholder = "Numero de usuario", @id = "inputNumUsuario" })
                @Html.ValidationMessageFor(Model => Model.Numusuario, "", new { @class = "text-danger" })
                <br />
                @Html.TextBoxFor(Model => Model.Usuario, new { @class = "form-control", @placeholder = "Usuario", @id = "inputUsuario" })
                @Html.ValidationMessageFor(Model => Model.Usuario, "", new { @class = "text-danger" })
                <br />
                @Html.PasswordFor(Model => Model.Contrasena, new { @class = "form-control", @placeholder = "Password", @id = "inputPassword" })
                @Html.ValidationMessageFor(Model => Model.Contrasena, "", new { @class = "text-danger" })
                <br />
                <input type="submit" value="Ingresar" class="btn btn-lg btn-primary btn-block btn-signin" />
            }
        </div>
    </div>

    <script src="~/Estilos/js/jquery.min.js"></script>
    <script src="~/Estilos/js/bootstrap.min.js"></script>
</body>
